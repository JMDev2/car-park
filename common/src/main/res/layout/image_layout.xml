<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/select_camera_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera" />


    <TextView
        android:id="@+id/camera_tv"
        android:text="Open Camera"
        style="@style/CameraTextViewStyle"
        app:layout_constraintEnd_toEndOf="@+id/select_camera_img"
        app:layout_constraintStart_toStartOf="@+id/select_camera_img"
        app:layout_constraintTop_toBottomOf="@+id/select_camera_img" />

    <ImageView
        android:id="@+id/galery_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/galery" />

    <TextView
        android:id="@+id/galery_tv"
        style="@style/CameraTextViewStyle"
        android:text="Choose from Galery"
        app:layout_constraintEnd_toEndOf="@+id/galery_img"
        app:layout_constraintStart_toStartOf="@+id/galery_img"
        app:layout_constraintTop_toBottomOf="@+id/galery_img" />
</androidx.constraintlayout.widget.ConstraintLayout>