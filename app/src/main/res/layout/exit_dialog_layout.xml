<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="112dp"
        android:textSize="24sp"
        android:fontFamily="@font/inter"
        style="@style/text_features"
        android:text="Are you sure you want to\n leave?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exit_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="15dp"
        android:textColor="#505353"
        android:fontFamily="@font/inter"
        android:text="You will be logged out of your account\n but wonâ€™t lose any of your personal\n information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/leave_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/button"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        app:layout_constraintTop_toBottomOf="@+id/exit_desc"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="259dp" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/inter"
        android:text="Cancel"
        android:textColor="@color/button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/leave_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/leave_tv"
         />


</androidx.constraintlayout.widget.ConstraintLayout>